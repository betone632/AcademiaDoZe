<?xml version="1.0" encoding="utf-8" ?>
<!-- Roberto Antunes Souza -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AcademiaDoZe.Presentation.AppMaui.Views.ColaboradorListPage"
             xmlns:vm="clr-namespace:AcademiaDoZe.Presentation.AppMaui.ViewModels"
             x:DataType="vm:ColaboradorListViewModel"
             xmlns:dto="clr-namespace:AcademiaDoZe.Application.DTOs;assembly=AcademiaDoZe.Application"
             xmlns:converters="clr-namespace:AcademiaDoZe.Presentation.AppMaui.Converters"
             Title="{Binding Title}">

    <!-- <ContentPage.Resources> é o dicionário de recursos local da página. -->
    <ContentPage.Resources>
        <converters:FotoToImageSourceConverter x:Key="FotoToImageSourceConverter" />
        <converters:EnumDisplayConverter x:Key="EnumDisplay" />

        <!-- Template para exibir colaborador individual -->
        <DataTemplate x:Key="ColaboradorItemTemplate" x:DataType="dto:ColaboradorDTO">
            <Grid Padding="1" Margin="5">
                <Border StrokeShape="RoundRectangle 15"
                        StrokeThickness="1"
                        Margin="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#43cea2" Offset="0.0" />
                            <GradientStop Color="#185a9d" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                          ColumnDefinitions="*,Auto,Auto"
                          Padding="10">
                        <Image Grid.Row="0"
                               Grid.Column="1"
                               Grid.ColumnSpan="2"
                               Grid.RowSpan="11"
                               Source="{Binding Foto, Converter={StaticResource FotoToImageSourceConverter}}"
                               Aspect="AspectFill"
                               Margin="0,0,10,0">
                            <Image.HeightRequest>
                                <OnIdiom x:TypeArguments="x:Double">
                                    <OnIdiom.Phone>110</OnIdiom.Phone>
                                    <OnIdiom.Tablet>120</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>120</OnIdiom.Desktop>
                                    <OnIdiom.TV>140</OnIdiom.TV>
                                    <OnIdiom.Default>110</OnIdiom.Default>
                                </OnIdiom>
                            </Image.HeightRequest>
                            <Image.WidthRequest>
                                <OnIdiom x:TypeArguments="x:Double">
                                    <OnIdiom.Phone>110</OnIdiom.Phone>
                                    <OnIdiom.Tablet>120</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>120</OnIdiom.Desktop>
                                    <OnIdiom.TV>140</OnIdiom.TV>
                                    <OnIdiom.Default>110</OnIdiom.Default>
                                </OnIdiom>
                            </Image.WidthRequest>
                        </Image>

                        <Label Grid.Row="0" Grid.Column="0" Text="{Binding Nome}" FontAttributes="Bold" TextColor="White" Margin="0,0,0,5"/>
                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding Cpf}" TextColor="White" Margin="0,0,0,5"/>
                        <Label Grid.Row="2" Grid.Column="0" Text="{Binding Telefone}" TextColor="White" Margin="0,0,0,5"/>
                        <Label Grid.Row="3" Grid.Column="0" Text="{Binding Email}" TextColor="White" Margin="0,0,0,5"/>
                        <Label Grid.Row="4" Grid.Column="0" Text="{Binding DataNascimento}" TextColor="White" Margin="0,0,0,5"/>
                        <Label Grid.Row="5" Grid.Column="0" Text="{Binding DataAdmissao}" TextColor="White" Margin="0,0,0,5"/>
                        <Label Grid.Row="6" Grid.Column="0" Text="{Binding Tipo, Converter={StaticResource EnumDisplay}}" TextColor="White" Margin="0,0,0,5"/>
                        <Label Grid.Row="7" Grid.Column="0" Text="{Binding Vinculo, Converter={StaticResource EnumDisplay}}" TextColor="White" Margin="0,0,0,5"/>

                        <Label Grid.Row="8" Grid.Column="0" Margin="0,0,0,5" TextColor="White">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding Endereco.Cep}"/>
                                    <Span Text=", "/>
                                    <Span Text="{Binding Endereco.Nome}"/>
                                    <Span Text=", "/>
                                    <Span Text="{Binding Endereco.Bairro}"/>
                                    <Span Text=", "/>
                                    <Span Text="{Binding Endereco.Cidade}"/>
                                    <Span Text=" - "/>
                                    <Span Text="{Binding Endereco.Estado}"/>
                                    <Span Text=" - "/>
                                    <Span Text="{Binding Endereco.Pais}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label Grid.Row="9" Grid.Column="0" Text="{Binding Numero}" TextColor="White" Margin="0,0,0,5"/>
                        <Label Grid.Row="10" Grid.Column="0" Text="{Binding Complemento}" TextColor="White" Margin="0,0,0,5"/>

                        <Button Grid.Row="0" Grid.Column="1" Text="" Style="{StaticResource ButtonSmall}" Margin="4,0" Clicked="OnEditButtonClicked">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe3c9;" />
                            </Button.ImageSource>
                        </Button>

                        <Button Grid.Row="0" Grid.Column="2" Text="" Style="{StaticResource ButtonDanger}" Margin="4,0" Clicked="OnDeleteButtonClicked">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe872;" />
                            </Button.ImageSource>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
    </ContentPage.Resources>

    <!-- estrutura principal da página -->
    <Grid RowDefinitions="Auto,*">
        <!-- Search Bar -->
        <Border Grid.Row="0"
                StrokeShape="RoundRectangle 12"
                StrokeThickness="1"
                Margin="15,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#6A82FB" Offset="0.0" />
                    <GradientStop Color="#FC5C7D" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid ColumnDefinitions="Auto,10,*,10,Auto" VerticalOptions="Center" Padding="8">
                <Picker Grid.Column="0"
                        Title=""
                        ItemsSource="{Binding FilterTypes}"
                        SelectedItem="{Binding SelectedFilterType}"
                        WidthRequest="110"
                        HorizontalOptions="Start"
                        HeightRequest="40"
                        VerticalOptions="Center"/>
                <Entry Grid.Column="2"
                       Text="{Binding SearchText}"
                       Placeholder="Digite o valor..."
                       HeightRequest="40"
                       VerticalOptions="Center"
                       TextChanged="OnSearchDebounceTextChanged"/>
                <Button Grid.Column="4"
                        Text=""
                        Style="{StaticResource ButtonPrimary}"
                        FontSize="14"
                        WidthRequest="80"
                        HeightRequest="40"
                        Command="{Binding SearchColaboradoresCommand}">
                    <Button.ImageSource>
                        <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe8b6;" />
                    </Button.ImageSource>
                </Button>
            </Grid>
        </Border>

        <!-- lista/grade + FAB -->
        <Grid Grid.Row="1">
            <RefreshView IsRefreshing="{Binding IsRefreshing}" Command="{Binding RefreshCommand}">
                <CollectionView ItemsSource="{Binding Colaboradores}"
                                SelectionMode="None"
                                Margin="10"
                                ItemTemplate="{StaticResource ColaboradorItemTemplate}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical">
                            <GridItemsLayout.Span>
                                <OnIdiom x:TypeArguments="x:Int32">
                                    <OnIdiom.Phone>1</OnIdiom.Phone>
                                    <OnIdiom.Default>1</OnIdiom.Default>
                                    <OnIdiom.Tablet>2</OnIdiom.Tablet>
                                    <OnIdiom.Desktop>3</OnIdiom.Desktop>
                                    <OnIdiom.TV>4</OnIdiom.TV>
                                </OnIdiom>
                            </GridItemsLayout.Span>
                        </GridItemsLayout>
                    </CollectionView.ItemsLayout>
                    <CollectionView.EmptyView>
                        <StackLayout VerticalOptions="Center">
                            <Label Text="Nenhum colaborador encontrado"
                                   HorizontalOptions="Center"
                                   Style="{StaticResource SubHeadline}"/>
                            <Button Text="Adicionar Primeiro Colaborador"
                                    Command="{Binding AddColaboradorCommand}"
                                    Style="{StaticResource ButtonPrimary}"
                                    HeightRequest="50"
                                    Margin="0,20,0,0"/>
                        </StackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>
            </RefreshView>

            <!-- FAB -->
            <Button Text=""
                    Command="{Binding AddColaboradorCommand}"
                    Style="{StaticResource ButtonPrimary}"
                    WidthRequest="56"
                    HeightRequest="56"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="20">
                <Button.Shadow>
                    <Shadow Brush="{AppThemeBinding Light=Black, Dark=Gray}"
                            Offset="0,4"
                            Radius="8"
                            Opacity="0.3"/>
                </Button.Shadow>
                <Button.ImageSource>
                    <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe145;" />
                </Button.ImageSource>
            </Button>
        </Grid>

        <!-- Loading -->
        <ActivityIndicator Grid.Row="0"
                           Grid.RowSpan="2"
                           IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>
    </Grid>
</ContentPage>
